@model IEnumerable<Category>

<div class="list-group">

    <a asp-controller="Blog" asp-action="Index" asp-route-id="" class="list-group-item list-group-item-action">
        Tüm Kategoriler
    </a>

    @foreach (var item in Model)
    {
        <a asp-controller="Blog" asp-action="Index" asp-route-id="@item.Id" 
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == item.Id.ToString()?"active":"")">

            @item.Name
        </a>
    }
</div>