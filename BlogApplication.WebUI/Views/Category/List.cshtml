@model IEnumerable<Category>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="container mt-3">
        <h2>Category List</h2>
        <a asp-controller="Category" asp-action="Create" class="btn btn-success">Create Category</a>
        <br />  <br />
        <div class="row">
            <div class="col-md-12">
                @if (Model.Count() > 0)
                {
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger">
                        Kategori Eklenmemiş
                    </div>
                }
            </div>
        </div>
    </div>


